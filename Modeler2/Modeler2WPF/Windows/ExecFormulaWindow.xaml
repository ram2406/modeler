        <Button Content="Выполгить" Grid.Column="2"  Height="23" HorizontalAlignment="Stretch" Margin="0,16,12,16" Name="button1" VerticalAlignment="Stretch" Click="button1_Click" />
        <Button Content="Закрыть" Grid.Column="2" Grid.Row="1"  Height="23" HorizontalAlignment="Stretch" Margin="0,14,12,14" Name="button2" VerticalAlignment="Stretch" Click="button2_Click" />
    </Grid>
</Window>
