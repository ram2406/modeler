        <Grid.RowDefinitions>
            <RowDefinition Height="54*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82*" />
            <ColumnDefinition Width="270*" />
            <ColumnDefinition Width="92*" />
        </Grid.ColumnDefinitions>
        <TextBox  HorizontalAlignment="Stretch" Margin="15,3,16,3" Name="textBox_exp" VerticalAlignment="Center"  Grid.Column="1" />
